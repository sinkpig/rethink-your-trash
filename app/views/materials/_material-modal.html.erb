<div class="modal fade" id="<%= material.name.downcase %>" tabindex="-1" aria-labelledby="<%= material.name.downcase %>" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-body">
        <div class="d-flex justify-content-between">
          <div>
            <%= image_tag "icon_#{material.name.downcase}.png", class: "d-inline-block", width: "50px" %>
            <h4 class="modal-title d-inline"><%= material.name %></h4>
          </div>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <hr>
        <%= material.description.html_safe %>
        <h5 class="mb-3">Cooperatives that work with <%= material.name %></h5>
        <% if material.cooperatives.count > 0 %>
          <ul>
              <% material.cooperatives.each do |cooperative| %>
                <li>
                  <h6 class="fw-bold">
                    <%= link_to cooperative_path(cooperative), class: "text-primary" do %>
                      <% cooperative.name %>
                    <% end %>
                  </h6>
                </li>
              <% end %>
          </ul>
        <% else %>
          <p class="mb-0">Sorry, no cooperatives accept <%= material.name %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
