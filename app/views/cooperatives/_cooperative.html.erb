<div class="col-lg-6 mb-3">
  <div class="card border-0 h-100">
    <div class="card-body">
      <div class="d-flex">
        <% if cooperative.photo.attached? %>
          <%= cl_image_tag(cooperative.photo.key, width: 150, height: 150, crop: :fill, class: "avatar me-3", style: "width: 50px; height: 100%;") %>
        <% else %>
          <%# <%= cl_image_tag("placeholder_rk7xuq", width: 150, height: 150, crop: :fill, class: "avatar me-3", style: "width: 50px; height: 100%;") %>
          <%= image_tag("http://res.cloudinary.com/dfefgeidi/image/upload/c_fill,h_150,w_150/placeholder_rk7xuq", class: "avatar me-3", style: "width: 50px; height: 100%;") %>
        <% end %>
        <div>
          <%= link_to cooperative_path(cooperative), class: "text-decoration-none stretched-link" do %>
            <h4 class="card-title"><%= cooperative.name %></h4>
          <% end %>
          <h6 class="card-text fw-normal"><%= cooperative.address %></h6>
        </div>
      </div>
    </div>
    <div class="card-footer" style="padding-left: 82px;">
      <h6>Accepted materials</h6>
      <% cooperative.materials.each do |material| %>
        <%= image_tag "icon_#{material.name.downcase}.png", style: "height: 35px; width: auto;" %>
      <% end %>
      <% if cooperative.materials.count == 0 %>
        <p class="mb-0">This cooperative doesn't accept materials yet</p>
      <% end %>
    </div>
  </div>
</div>
