
<%= simple_form_for [@cooperative, @trade], url: cooperative_trades_path, data: { controller: 'flatpickr' } do |f| %>
  <%= f.association :material, collection: @cooperative.materials,
      input_html: { class: "bg-white" } %>
  <div class="field">
    <%= f.label "What bag size do you have of the material?" %><br />
    <%= f.input :material_quantity,
        input_html: { class: "bg-white" },
        label: false %>
  </div>
  <%= f.input :delivery_method, collection: ["Pick up", "Drop off"],
      input_html: { class: "bg-white" } %>
  <%= f.input :delivery_date, as: :string,
      input_html: { data: { flatpickr_target: "deliveryDate" }, class: "bg-white" } %>
  <%= f.button :submit, class: "btn btn-primary mt-3 w-100" %>
<% end %>
