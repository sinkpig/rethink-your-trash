<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <span class="badge rounded-pill text-bg-secondary">Logo</span>
      <span class="mb-0">Take my trash</span>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto align-items-center">

        <% if user_signed_in? && current_user.person? %>

          <li class="nav-item">
            <%= link_to "My trades", profile_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Materials", materials_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Cooperatives", cooperatives_path, class: "nav-link" %>
          </li>
          <%# TODO: add notifications %>
          <li class="nav-item dropdown ms-4">
            <a class="nav-link dropdown-toggle fw-bold" style="cursor: pointer;" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar" %>
              <%= current_user.name %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Profile", profile_path, class: "dropdown-item" %>
              <div class="d-flex justify-content-between dropdown-item">
                <p class="mb-0">Wallet:</p>
                <p class="mb-0">0 <i class="fa-solid fa-coins text-warning"></i></p>
              </div>
              <%= link_to "#", class: "dropdown-item", disabled: true do %>
                <i class="fa-solid fa-gift text-muted"></i> Rewards
              <% end %>
              <div class="dropdown-item py-0"><hr class="my-1"></div>
              <%= link_to destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item text-danger" do %>
                <i class="fa-solid fa-arrow-right-from-bracket"></i> Log out
              <% end %>
            </div>
          </li>

        <% elsif user_signed_in? && current_user.cooperative? %>

          <li class="nav-item px-2 fw-bold">
            <%= current_user.name %>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle fw-bold" style="cursor: pointer;" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar" %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Profile", profile_path, class: "dropdown-item" %>
              <div class="d-flex justify-content-between dropdown-item">
                <p class="mb-0">Wallet:</p>
                <p class="mb-0">0 <i class="fa-solid fa-coins text-warning"></i></p>
              </div>
              <%= link_to "#", class: "dropdown-item", disabled: true do %>
                <i class="fa-solid fa-gift text-muted"></i> Rewards
              <% end %>
              <div class="dropdown-item py-0"><hr class="my-1"></div>
              <%= link_to destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item text-danger" do %>
                <i class="fa-solid fa-arrow-right-from-bracket"></i> Log out
              <% end %>
            </div>
          </li>

        <% else %>

          <li class="nav-item px-2">
            <%= link_to "Sign up", new_user_registration_path, class: "nav-link btn btn-primary text-white" %>
          </li>
          <li class="nav-item px-2">
            <%= link_to "Log in", new_user_session_path, class: "nav-link btn btn-secondary text-white" %>
          </li>

        <% end %>

      </ul>
    </div>
  </div>
</div>
